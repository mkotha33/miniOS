    public static void opencoolpad(String s) throws IOException
    {
        if(c_i<3)
        {
            c_new[c_i]=new Coolpad();
            desk.add(c_new[c_i]);
            c_new[c_i].show();
            c_new[c_i].appendtota(s);
            c_i++;
        }
        else
        {
            if(c_var==3)
                c_var=0;
           // c_new[c_var]=new Coolpad();
            //desk.add(c_new[c_var]);
           // c_new[c_var].show();
           c_new[c_var].appendtota(s);
            c_var++;
        }
        
        /*if(c_new==null)
        {c_new=new Coolpad();
        System.out.println("myhome");
        desk.add(c_new);
        c_new.show();
        c_new.appendtota(s);}
        else
        {
            c_new.appendtota(s);
        }*/
    }
    public static void openplayer(String s) throws IOException
    {
        /*RaagPlayer cpo=new RaagPlayer();
        System.out.println("myhome");
        desk.add(cpo);
        cpo.show();
        cpo.playsong(s);*/
        if(r_i<3)
        {
            r_new[r_i]=new RaagPlayer();
            desk.add(r_new[r_i]);
            r_new[r_i].show();
            r_new[r_i].playsong(s);
            r_i++;
        }
        else
        {
            if(r_var==3)
                r_var=0;
           // c_new[c_var]=new Coolpad();
            //desk.add(c_new[c_var]);
           // c_new[c_var].show();
           r_new[r_var].playsong(s);
            r_var++;
        }
    }
